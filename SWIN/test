#!/bin/bash

if [ -e output ]
then
	rm -r output
fi

mkdir output
FileSuffix=".update"

if [ $# -gt 1 ]
then
	echo "Compiling File "$@
	Compile=""
	flag=0
	filename=$1
	cp $filename "DONOTUSETHISNAME.DONOTUSETHISNAME"
	for i in $@;do
		if [ $flag -gt 0 ]
		then 
			Compile=$Compile" "$i
		else
			flag=1
		fi
	done
	echo $Compile
	bin/jlc -d output/ -ext update $Compile
	rm "DONOTUSETHISNAME.DONOTUSETHISNAME"
else
	echo "An error occured. Seems arguments are not right"
fi
